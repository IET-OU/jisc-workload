{
  "name": "iet-ou/jisc-workload",
  "description": "A web-based tool for recording, visualising and managing student workload on courses, developed by The Open University.",
  "type": "project",
  "keywords": [ "Jisc", "student", "OpenUniversity", "IET-OU" ],
  "license": "GPL-3.0+",
  "time": "2015-10-25",
  "authors": [
    { "name": "Jitse van Ameijde" }
  ],
  "support": {
    "source": "https://github.com/IET-OU/jisc-workload"
  },
  "require": {
    "php": ">=5.4.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5",
    "jakub-onderka/php-parallel-lint": "^0.9.2"
  },
  "suggest": {
    "vlucas/phpdotenv": "^2.2"
  },
  "scripts": {
    "setup-config": [
      "cp -n framework/tables.DIST.sql framework/tables.sql",
      "cp -n site/config/config.DIST.php site/config/config.php"
    ],
    "test": [
      "# composer validate --no-interaction",
      "parallel-lint framework/*",
      "# parallel-lint site/*",
      "parallel-lint index.php",
      "# phpcs --standard=PSR2 -n --encoding=utf-8 --extensions=php framework/base/CController.*",
      "# phpcs --standard=PSR2 -n --encoding=utf-8 --extensions=php framework/controllers/CDefaultController.*",
      "phpcs --standard=PSR2 -n --encoding=utf-8 --extensions=php index.php"
    ],
    "fix": [
      "phpcbf --standard=PSR2 -n --encoding=utf-8 index.php"
    ]
  }
}
